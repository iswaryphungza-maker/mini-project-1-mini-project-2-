#include <stdio.h>
#include <windows.h>   

int main() {
    int hour, min, sec;

    
    hour = 0;
    min = 0;
    sec = 0;

    while (1) {
        
        system("cls");

        
        printf("Simple Digital Clock\n");
        printf("--------------------\n");
        printf("%02d : %02d : %02d\n", hour, min, sec);

        
        Sleep(1000);

        
        sec++;

        if (sec == 60) {
            sec = 0;
            min++;
        }

        if (min == 60) {
            min = 0;
            hour++;
        }

        if (hour == 24) {
            hour = 0;
        }
    }

    return 0;
}
